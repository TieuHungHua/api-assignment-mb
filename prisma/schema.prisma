generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum UserRole {
  student
  admin
  lecturer
}

enum BorrowStatus {
  active
  returned
  overdue
}

enum InteractionType {
  like
  comment
}

enum EventType {
  borrow
  return
  like
  comment
  redeem
}

enum PointReason {
  borrow
  return_on_time
  return_late
  like
  comment
  redeem
}

enum RedeemStatus {
  pending
  approved
  delivered
}

enum RoomBookingStatus {
  pending
  approved
  completed
  cancelled
}

enum RoomResourceType {
  projector
  whiteboard
  tv
  speakerphone
  microphone
  other
}

enum TicketType {
  borrow_book
  return_book
  room_booking
  room_cancellation
}

enum TicketStatus {
  pending
  approved
  rejected
}

enum NotificationStatus {
  pending
  sent
  failed
}

// Models
model User {
  id          String    @id @default(uuid())
  username    String    @unique
  password    String // Hashed password
  email       String?   @unique
  phone       String?   @unique
  studentId   String?   @map("student_id") // Mã sinh viên (chỉ cho student)
  displayName String    @map("display_name")
  avatar      String?
  classMajor  String?   @map("class_major")
  dateOfBirth DateTime? @map("date_of_birth") // Ngày sinh
  gender      String? // Giới tính (male, female, other)
  role        UserRole  @default(student)

  // Counters (cached/aggregated)
  totalBorrowed Int @default(0) @map("total_borrowed")
  totalReturned Int @default(0) @map("total_returned")
  totalLikes    Int @default(0) @map("total_likes")
  totalComments Int @default(0) @map("total_comments")
  activityScore Int @default(0) @map("activity_score")

  // Push notification fields
  fcmToken      String? @map("fcm_token")
  isPushEnabled Boolean @default(true) @map("is_push_enabled")

  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  borrows           Borrow[]
  interactions      Interaction[]
  comments          Comment[]
  pointTransactions PointTransaction[]
  redeems           Redeem[]
  activities        Activity[]
  meetingBookings   MeetingBookingLegacy[]
  roomBookings      RoomBooking[]          @relation("RoomBookingUser")
  approvedBookings  RoomBooking[]          @relation("RoomBookingApprover")
  cancelledBookings RoomBooking[]          @relation("RoomBookingCanceller")
  createdTickets    Ticket[]               @relation("TicketCreator")
  reviewedTickets   Ticket[]               @relation("TicketReviewer")
  notificationLogs  NotificationLog[]

  @@index([role])
  @@index([isPushEnabled])
  @@map("users")
}

model Book {
  id              String   @id @default(uuid())
  title           String
  author          String
  categories      String[] @default([])
  coverImage      String?  @map("cover_image") // URL ảnh bìa từ Cloudinary
  description     String?
  pages           Int?
  publicationYear Int?     @map("publication_year")
  publisher       String?
  availableCopies Int      @default(0) @map("available_copies")

  // Counters
  likeCount    Int @default(0) @map("like_count")
  commentCount Int @default(0) @map("comment_count")
  borrowCount  Int @default(0) @map("borrow_count")

  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  borrows      Borrow[]
  interactions Interaction[]
  comments     Comment[]
  activities   Activity[]
  tickets      Ticket[]

  @@index([title])
  @@index([author])
  @@map("books")
}

model Borrow {
  id            String       @id @default(uuid())
  userId        String       @map("user_id")
  bookId        String       @map("book_id")
  borrowedAt    DateTime     @default(now()) @map("borrowed_at")
  dueAt         DateTime     @map("due_at")
  returnedAt    DateTime?    @map("returned_at")
  status        BorrowStatus @default(active)
  renewCount    Int          @default(0) @map("renew_count")
  maxRenewCount Int          @default(1) @map("max_renew_count")

  // Relations
  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  book             Book              @relation(fields: [bookId], references: [id], onDelete: Cascade)
  notificationLogs NotificationLog[]

  @@index([userId])
  @@index([bookId])
  @@index([status, dueAt])
  @@index([borrowedAt(sort: Desc)])
  @@map("borrows")
}

model Interaction {
  id        String          @id @default(uuid())
  userId    String          @map("user_id")
  bookId    String          @map("book_id")
  type      InteractionType
  content   String?
  createdAt DateTime        @default(now()) @map("created_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  book Book @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@unique([userId, bookId, type])
  @@index([bookId, type])
  @@index([userId, createdAt(sort: Desc)])
  @@map("interactions")
}

model Comment {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  bookId    String   @map("book_id")
  content   String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  book Book @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@unique([userId, bookId]) // Mỗi user chỉ được comment 1 lần cho mỗi book
  @@index([bookId, createdAt(sort: Desc)])
  @@index([userId, createdAt(sort: Desc)])
  @@map("comments")
}

model PointTransaction {
  id        String      @id @default(uuid())
  userId    String      @map("user_id")
  delta     Int // Positive for earning, negative for spending
  reason    PointReason
  refType   String?     @map("ref_type") // 'borrow_id', 'interaction_id', 'reward_id'
  refId     String?     @map("ref_id") // UUID reference
  note      String?
  createdAt DateTime    @default(now()) @map("created_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt(sort: Desc)])
  @@index([reason])
  @@map("point_transactions")
}

model Reward {
  id          String  @id @default(uuid())
  name        String
  description String?
  costPoints  Int     @map("cost_points")
  stock       Int     @default(0)
  active      Boolean @default(true)

  // Relations
  redeems    Redeem[]
  activities Activity[]

  @@index([active])
  @@map("rewards")
}

model Redeem {
  id         String       @id @default(uuid())
  userId     String       @map("user_id")
  rewardId   String       @map("reward_id")
  costPoints Int          @map("cost_points")
  status     RedeemStatus @default(pending)
  note       String?
  createdAt  DateTime     @default(now()) @map("created_at")

  // Relations
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  reward Reward @relation(fields: [rewardId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt(sort: Desc)])
  @@index([status, createdAt(sort: Desc)])
  @@map("redeems")
}

model Activity {
  id        String    @id @default(uuid())
  userId    String    @map("user_id")
  eventType EventType @map("event_type")
  bookId    String?   @map("book_id")
  rewardId  String?   @map("reward_id")
  payload   Json? // Small JSON for additional data
  createdAt DateTime  @default(now()) @map("created_at")

  // Relations
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  book   Book?   @relation(fields: [bookId], references: [id], onDelete: SetNull)
  reward Reward? @relation(fields: [rewardId], references: [id], onDelete: SetNull)

  @@index([createdAt(sort: Desc)])
  @@index([userId, createdAt(sort: Desc)])
  @@index([eventType, createdAt(sort: Desc)])
  @@map("activities")
}

model MeetingBookingLegacy {
  id        String   @id
  userId    String   @map("user_id")
  tableName String   @map("table_name")
  startAt   DateTime @map("start_at")
  endAt     DateTime @map("end_at")
  purpose   String?
  attendees Int?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([tableName, startAt(sort: Desc)])
  @@index([userId, startAt(sort: Desc)])
  @@map("meeting_bookings")
}

model MeetingRoom {
  id        String   @id @default(uuid())
  name      String
  capacity  Int
  imageUrl  String?  @map("image_url")
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  resources RoomResource[]
  bookings  RoomBooking[]
  tickets   Ticket[]

  @@index([isActive])
  @@index([name])
  @@map("meeting_rooms")
}

model RoomResource {
  id        String           @id @default(uuid())
  roomId    String           @map("room_id")
  type      RoomResourceType
  createdAt DateTime         @default(now()) @map("created_at")

  room MeetingRoom @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@index([roomId])
  @@index([type])
  @@map("room_resources")
}

model RoomBooking {
  id            String            @id @default(uuid())
  roomId        String            @map("room_id")
  userId        String            @map("user_id")
  startAt       DateTime          @map("start_at")
  endAt         DateTime          @map("end_at")
  purpose       String
  attendeeCount Int               @map("attendee_count")
  status        RoomBookingStatus @default(pending)
  approvedBy    String?           @map("approved_by")
  approvedAt    DateTime?         @map("approved_at")
  cancelledBy   String?           @map("cancelled_by")
  cancelledAt   DateTime?         @map("cancelled_at")
  cancelReason  String?           @map("cancel_reason")
  createdAt     DateTime          @default(now()) @map("created_at")
  updatedAt     DateTime          @updatedAt @map("updated_at")

  room      MeetingRoom @relation(fields: [roomId], references: [id], onDelete: Cascade)
  user      User        @relation("RoomBookingUser", fields: [userId], references: [id], onDelete: Cascade)
  approver  User?       @relation("RoomBookingApprover", fields: [approvedBy], references: [id], onDelete: SetNull)
  canceller User?       @relation("RoomBookingCanceller", fields: [cancelledBy], references: [id], onDelete: SetNull)

  @@index([roomId, startAt, endAt])
  @@index([userId, startAt])
  @@index([status, startAt])
  @@map("room_bookings")
}

model Ticket {
  id     String       @id @default(uuid())
  userId String       @map("user_id")
  type   TicketType
  status TicketStatus @default(pending)

  // For book tickets (borrow/return)
  bookId String? @map("book_id")

  // For room tickets (booking/cancellation)
  roomId  String?   @map("room_id")
  startAt DateTime? @map("start_at")
  endAt   DateTime? @map("end_at")

  // Additional info
  reason String? // Lý do yêu cầu/hủy
  note   String? // Ghi chú từ admin

  // Review info (admin)
  reviewedBy String?   @map("reviewed_by")
  reviewedAt DateTime? @map("reviewed_at")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  user     User         @relation("TicketCreator", fields: [userId], references: [id], onDelete: Cascade)
  reviewer User?        @relation("TicketReviewer", fields: [reviewedBy], references: [id], onDelete: SetNull)
  book     Book?        @relation(fields: [bookId], references: [id], onDelete: SetNull)
  room     MeetingRoom? @relation(fields: [roomId], references: [id], onDelete: SetNull)

  @@index([userId, createdAt(sort: Desc)])
  @@index([type, status])
  @@index([status, createdAt(sort: Desc)])
  @@index([bookId])
  @@index([roomId])
  @@map("tickets")
}

model NotificationLog {
  id           String             @id @default(uuid())
  userId       String             @map("user_id")
  borrowId     String?            @map("borrow_id")
  title        String
  body         String
  status       NotificationStatus @default(pending)
  fcmToken     String?            @map("fcm_token")
  errorMessage String?            @map("error_message")
  retryCount   Int                @default(0) @map("retry_count")
  sentAt       DateTime?          @map("sent_at")
  isRead       Boolean            @default(false) @map("is_read")
  readAt       DateTime?          @map("read_at")
  createdAt    DateTime           @default(now()) @map("created_at")

  // Relations
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  borrow Borrow? @relation(fields: [borrowId], references: [id], onDelete: SetNull)

  @@index([userId, createdAt(sort: Desc)])
  @@index([status, createdAt(sort: Desc)])
  @@index([borrowId])
  @@index([userId, isRead])
  @@map("notification_logs")
}
